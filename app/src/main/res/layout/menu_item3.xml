<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/gray"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"


            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:textSize="20dp"
            android:text="Каша гречневая на молоке"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:columnCount="3"
       android:rowCount="2"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_rowSpan="2">



       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:textStyle="bold|italic"
           android:text="Диеты"

           android:layout_marginBottom="5dp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginStart="10dp"
        android:layout_gravity="fill"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/diet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginEnd="3dp"
            android:padding="3dp"
            android:text="М"
            android:gravity="center"/>
        <TextView
            android:id="@+id/diet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:padding="3dp"
            android:text="Б"
            android:gravity="center"/>
        <TextView
            android:id="@+id/diet3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:padding="3dp"
            android:text="МБ"
            android:gravity="center"
           />
        <TextView
            android:id="@+id/diet4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="АК"
            android:padding="3dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/diet5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ПУ"
            android:layout_gravity="fill"
            android:layout_marginEnd="3dp"
            android:padding="3dp"
            android:gravity="center"/>


        <TextView
            android:id="@+id/diet6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:layout_gravity="fill"
            android:text="У"/>

    </GridLayout>
       </LinearLayout>

       <ImageView

           android:id="@+id/image_item"
           android:layout_width="140dp"
           android:layout_height="110dp"
           android:layout_row="0"
           android:layout_rowSpan="2"
           android:layout_column="1"
           android:layout_marginStart="5dp"
           android:src="@drawable/grecha" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/kids_item"
               android:visibility="invisible"
               android:layout_marginStart="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="3dp"
               android:paddingBottom="3dp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:text="Детям"
               android:textStyle="bold"
               android:background="@drawable/kids_form"/>
           <TextView
               android:id="@+id/dejurnoe_bludo_item"
               android:visibility="invisible"
               android:layout_marginStart="10dp"
               android:layout_marginTop="3dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="3dp"
               android:paddingTop="3dp"
               android:paddingBottom="3dp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:text="Дежурное"
               android:textStyle="bold"
               android:background="@drawable/dejur_bludo_form"/>

       </LinearLayout>

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginStart="9dp"
              android:textSize="17sp"
              android:textStyle="bold"
              android:text="1"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginStart="10dp"
              android:textSize="17sp"
              android:textStyle="bold"
              android:text="2"/>

          <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginStart="10dp"
              android:textSize="17sp"
              android:textStyle="bold"
          android:text="3"/>

          <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginStart="15dp"
              android:textSize="17sp"
              android:textStyle="bold"
          android:text="4"/>
          </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


          <RadioButton
               android:id="@+id/bt_radio1"
               android:layout_width="40dp"
               android:layout_height="wrap_content"
                android:layout_weight="1"/>

           <RadioButton
               android:id="@+id/bt_radio2"
               android:layout_width="40dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <RadioButton
               android:id="@+id/bt_radio3"
               android:layout_width="40dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <RadioButton
               android:id="@+id/bt_radio4"
               android:layout_width="40dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>
          </androidx.appcompat.widget.LinearLayoutCompat>


      </androidx.appcompat.widget.LinearLayoutCompat>
   </GridLayout>

   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:rowCount="2"
       android:columnCount="2">

       <TextView
           android:layout_width="wrap_content"
       android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:textStyle="bold|italic"
       android:text="Выход блюда"/>
       <TextView
           android:id="@+id/mass_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:text="175 г"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:text="КБЖУ"
           android:textStyle="bold|italic"/>
       <TextView
           android:id="@+id/kbju_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:text="490/58/45/13"/>


   </GridLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>